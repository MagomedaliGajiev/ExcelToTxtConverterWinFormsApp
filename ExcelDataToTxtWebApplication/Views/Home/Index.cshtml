@using System.IO <!-- Должно быть ПЕРВОЙ строкой -->
@model ExcelUploadModel

@{
    ViewBag.Title = "Конвертер Excel в TXT";
}

<h2>Конвертер Excel в TXT</h2>

<form asp-action="Index" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="ExcelFile"></label>
        <input asp-for="ExcelFile" class="form-control" />
        <span asp-validation-for="ExcelFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Конвертировать</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mt-3">
        @Model.Message
    </div>
}

@if (Model.GeneratedFiles.Any())
{
    <div class="mt-3">
        <h4>Сгенерированные файлы:</h4>
        @foreach (var file in Model.GeneratedFiles)
        {
            <a href="@file" class="btn btn-success" download>Скачать @System.IO.Path.GetFileName(file)</a>
        }
    </div>
}